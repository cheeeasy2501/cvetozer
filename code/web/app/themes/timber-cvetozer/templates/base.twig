{% block html_head_container %}

    {% include 'html-header.twig' %}
    {% block head %}
    {% endblock %}
    </head>
{% endblock %}

<body class="{{ body_class }}" data-template="base.twig">
<div class="body-wrapper">
    {# <a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a> #}
    <header class="header">
        {% block header %}
            <div class="wrapper">
                <div class="inside-wrapper">
                    <div class=" base-header">
                        <h1 class="hdr-logo" role="banner">
                            <a class="hdr-logo-link" href="{{ site.url }}" rel="home">{{ site.name }}</a>
                        </h1>
                    </div>
                    <div class="contact-information__top">{{ contact_information_top_widgets }}</div>
                </div>
            </div>
        {% endblock %}
    </header>

    <section id="content" role="main" class="content-wrapper">
        <div class="wrapper">
            <div class="inside-wrapper main-content">
                <section class="navigation-block">
                    <nav id="nav-main" class="nav-main" role="navigation">
                        <div class="nav-pre__text">Магазин</div>
                        {% include "menu.twig" with {'items': menu.get_items} %}
                    </nav><!-- #nav -->

                </section>
                {# {% if title %}<h1>{{title}}</h1>{% endif %} #}
                <section class="{{ sidebar_class }} content-block">
                    {% block content %}
                    {% endblock %}
                </section>
            </div>
        </div>
    </section>


    {% block footer %}
        <footer id="footer">
            <div class="wrapper">
                {% include 'footer.twig' %}
                {{ function('wp_footer') }}
            </div>
        </footer>
    {% endblock %}
</div>
{# scripts #}
<script src="{{ site.theme.link }}/static/site.js"></script>
</body>
</html>
